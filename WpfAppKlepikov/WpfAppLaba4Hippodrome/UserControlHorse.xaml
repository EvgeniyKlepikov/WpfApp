<UserControl x:Class="WpfAppLaba4Hippodrome.UserControlHorse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppLaba4Hippodrome"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="16px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="textBlockSpeed" FontSize="18"/>
        <TextBlock x:Name="textBlockPosition" Grid.Row="1" FontSize="12" Foreground="Red"/>
        <Image Source="/WpfAppLaba4Hippodrome;component/Resources/horse.jpg" Grid.Row="2" Width="100"/>
    </Grid>
</UserControl>
