<Window x:Class="WpfAppLaba5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppLaba5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="24">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top" Height="35" Background="LightSteelBlue">
            <MenuItem Header="Shape" Click="MenuItemShape_Click"/>
            <MenuItem Header="File">
                <MenuItem Header="Save"/>
                <MenuItem Header="Load"/>
            </MenuItem>
            <MenuItem Header="Help"/>
            <MenuItem Header="Exit"/>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" Height="35" Background="LightCyan">
            
        </StatusBar>
        <Canvas x:Name="canvas" Background="Beige"/>
    </DockPanel>
</Window>
